rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to get user role from users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Helper function to check if user is super_admin
    function isSuperAdmin() {
      return isAuthenticated() && getUserRole() == 'super_admin';
    }
    
    // Helper function to check if user is admin or super_admin
    function isAdmin() {
      return isAuthenticated() && (getUserRole() == 'admin' || getUserRole() == 'super_admin');
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can create their own document (first-time registration)
      allow create: if isOwner(userId);
      
      // Users can update their own document (for lastLogin, menuOrder, etc.)
      allow update: if isOwner(userId) || isSuperAdmin();
      
      // Only super_admin can delete users
      allow delete: if isSuperAdmin();
    }
    
    // Super admin can read all users
    match /users/{userId} {
      allow read, write: if isSuperAdmin();
    }

    // Roles collection
    match /roles/{roleName} {
      // All authenticated users can read roles (needed for permission checking)
      allow read: if isAuthenticated();
      
      // Only super_admin can write roles
      allow write: if isSuperAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
